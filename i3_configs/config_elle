# startup

gaps inner 10
gaps outer 10

bindsym $mod++ amixer set Master 10%+
bindsym $mod+- amixer set Master 10%-

bindsym $mod+b border pixel 0
bindsym $mod+n border pixel 1

bindsym $mod+p exec xdotool click 2
 
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 10%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 10%-

bindsym Print exec && scrot '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/Pictures/screenshots/'
 

client.focused                  #92a28c #92a28c #92a28c
client.unfocused                #92a28c #92a28c #92a28c
client.focused_inactive         #dfe2d1 #dfe2d1 #dfe2d1


for_window [class="^.*"]                                border pixel 1
for_window [class="[.]*"] 				floating enable

hide_edge_borders vertical


exec --no-startup-id xrandr --output HDMI1 --left-of VGA1 &
exec xset -dpms s off &
exec compton --config ~/.config/compton.conf -cb &
exec relcomp &
exec mopidy &
exec mpdscribble &
exec rlb &
